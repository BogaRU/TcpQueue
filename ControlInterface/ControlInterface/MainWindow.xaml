<Window x:Class="ControlInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Control Interface" Height="200" Width="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal" Margin="10">
            <ToggleButton x:Name="toggleButton" Content="Годный / Брак" Width="120" />
            <Ellipse x:Name="statusIndicator" Width="20" Height="20" Fill="Yellow" Margin="10,0,0,0"/>
        </StackPanel>
        <Button x:Name="cameraButton" Content="Камера" Width="160" Margin="10" Click="CameraButton_Click"/>
        <Button x:Name="pusherButton" Content="Толкатель" Width="160" Margin="10" Click="PusherButton_Click"/>
    </StackPanel>
</Window>
